{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "removeComments": true,
        "strict": true,
        "strictNullChecks": true,
        "inlineSourceMap": true,
        "noImplicitThis": true,
    },
    "types": [
        "node"
    ],
    "typeRoots": [
        "./node_modules/@types"
    ],
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}